{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "../../dist/out-tsc",
    "module": "commonjs",
    "types": ["node"],
    "emitDecoratorMetadata": true,
    "target": "es2015",
    "paths": {
      "@/app/*": ["app/*"],
      "@/auth/*": ["auth/*"],
      "@/config/*": ["config/*"],
      "@/database/*": ["database/*"],
      "@/users/*": ["users/*"],
    }
  },
  "exclude": ["**/*.spec.ts"],
  "include": ["**/*.ts"]
}
