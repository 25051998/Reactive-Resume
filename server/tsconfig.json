{
  "compilerOptions": {
    "baseUrl": "./src",
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": false,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "incremental": true,
    "skipLibCheck": true,
    "paths": {
      "@/app/*": ["app/*"],
      "@/auth/*": ["auth/*"],
      "@/config/*": ["config/*"],
      "@/database/*": ["database/*"],
      "@/users/*": ["users/*"]
    }
  }
}
